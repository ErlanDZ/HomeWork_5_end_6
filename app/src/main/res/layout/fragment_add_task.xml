<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/figma"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddTaskFragment">

    <EditText
        android:id="@+id/et_second_fragment"
        android:hint="ВВЕДИТЕ ТЕКСТ"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:padding="15dp"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_second_fragment_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_second_fragment_description"
        android:hint="ВВЕДИТЕ ОПИСАНИЕ"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:padding="15dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/et_second_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_add"
        app:layout_constraintTop_toBottomOf="@id/et_second_fragment_description"
        android:text="ADD IN SECOND FRAGMENT"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/oval"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>